<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csit551.appinventors.jaynote" >



    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.TipActivity"
            android:label="@string/title_activity_tip" >
        </activity>
        <activity
            android:name=".Activities.SightingActivity"
            android:label="@string/title_activity_sighting" >
        </activity>
        <activity
            android:name=".Activities.NoteActivity"
            android:windowSoftInputMode="adjustNothing"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name=".Activities.LinkListActivity"
            android:label="@string/title_activity_links" >
        </activity>
        <activity
            android:name=".Activities.NoteListActivity"
            android:label="@string/title_activity_note_list" >
        </activity>
    </application>

</manifest>

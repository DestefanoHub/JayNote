<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4FF00"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.csit551.appinventors.jaynote.Activities.SightingActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other_options_button"
        android:src="@mipmap/smalljay"
        android:background="@drawable/round_vague_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:id="@+id/delete_button"
        android:clickable="true"
        android:background="@drawable/delete_drawable"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/save_button"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/save_drawable" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/other_options_button"
        android:layout_alignRight="@+id/other_options_button"
        android:layout_alignEnd="@+id/other_options_button"
        android:layout_above="@+id/delete_button">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sighting_title"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/sighting_title_input"
            android:layout_row="0"
            android:layout_column="5"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/size_animal"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/size_animal_input"
            android:hint="@string/size_hint"
            android:layout_row="1"
            android:layout_column="5"
            android:inputType="textMultiLine"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/estimated_weight"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/estimated_weight_input"
            android:hint="@string/weight_hint"
            android:layout_row="2"
            android:layout_column="5"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/type_of_organism"
            android:id="@+id/textView5"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/type_organism_input"
            android:hint="@string/type_organism_hint"
            android:layout_row="3"
            android:layout_column="5"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/color_organism"
            android:id="@+id/textView6"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/color_input"
            android:layout_row="4"
            android:layout_column="5"
            android:inputType="textMultiLine"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/upload_sound"
            android:id="@+id/textView7"
            android:layout_row="5"
            android:layout_column="0" />


        <ImageButton
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_row="5"
            android:layout_column="5"
            android:src="@mipmap/sound" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/organism_photo"
            android:id="@+id/textView8"
            android:layout_row="6"
            android:layout_column="0" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_row="6"
            android:layout_column="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/time_of_day"
            android:id="@+id/textView9"
            android:layout_row="7"
            android:layout_column="0" />

        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/time_of_day_input"
            android:hint="@string/time_hint"
            android:layout_row="7"
            android:layout_column="5"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/date"
            android:id="@+id/textView10"
            android:layout_row="8"
            android:layout_column="0" />

        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_input"
            android:layout_row="8"
            android:layout_column="5"
            android:inputType="date"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/location"
            android:id="@+id/textView11"
            android:layout_row="9"
            android:layout_column="0" />


        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/location_input"
            android:layout_row="9"
            android:layout_column="5"
            android:inputType="textMultiLine"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/misc"
            android:id="@+id/textView12"
            android:layout_row="10"
            android:layout_column="0" />

        <EditText
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:id="@+id/misc_input"
            android:layout_row="10"
            android:layout_column="5"
            android:inputType="textMultiLine"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </GridLayout>

</RelativeLayout>
